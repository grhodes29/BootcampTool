
@model  IEnumerable<BootcampTool.Models.User>

@{
    ViewBag.Title = "Users";
}


@section scripts{


    <script type="text/javascript">

        $(document).ready(function () {

            $('#users').DataTable();
        });

    </script>


}


<h2>Users</h2>

<table id="users">
    <thead>
        <tr>
            <th hidden="hidden">Id</th>
            <th>First Name </th>
            <th>Last Name </th>
            <th>User name</th>
            <th>Delete Action</th>
            <th>Edit Action</th>
            @*<th>Email</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (BootcampTool.Models.User u in Model)
        {
            <tr>
                <td hidden="hidden">@u.Id</td>
                <td>@u.Firstname</td>
                <td>@u.LastName</td>
                <td>@u.Username</td>
                <td>@Html.ActionLink("delete", "InactivateUser", new { userToInactivate = u.Id } )</td>
                <td>@Html.ActionLink("edit", "EditUser", new { userToEdit = u.Id })</td>
            </tr>
        }
    </tbody>
</table>

