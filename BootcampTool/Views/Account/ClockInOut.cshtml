@model  BootcampTool.Models.TimeEntry

@{
    ViewBag.Title = "ClockInOut";
}


@section scripts{


    <script type="text/javascript">


        $(document).ready(function () {

            //  startTime();

        });


        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            m = checkTime(m);
            s = checkTime(s);
            document.getElementById('time').innerHTML =
                h + ":" + m + ":" + s;
            var t = setTimeout(startTime, 500);
        }

        function checkTime(i) {
            if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
            return i;
        }


    </script>


}




@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
       
        <tr>
            <td>User Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Username)
            </td>
        </tr>
    
        <tr>
            <td></td>
            <td><input type="submit" value="Clock me" /></td>
        </tr>
        <tr>
            <td><h2>Clock IN: <label id="clockin">@Model.ClockInTime</label></h2></td>
            <td><h2>Clock OUT: <label id="clockout">@Model.ClockOutTime</label></h2></td>
        </tr>
    </table>
}





